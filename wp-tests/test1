import os
from selenium import webdriver
from selenium.webdriver.common.keys import Keys
from selenium.webdriver.common.by import By

# Set PATH for chrome driver
os.environ['PATH'] += r"C:\Users\nazar\git\NCtestVSrepo\NCtestVSrepo\Local_website"

# Select Web browser for testing
driver = webdriver.Chrome()

# Open a webpage
driver.get("http://localhost/wp-test/site/")
# Add implicity wait for elements to be downloaded

driver.implicitly_wait(4)

# Define form fields variables.
first_name = driver.find_element(By.ID, 'field_dp46a_first')
last_name = driver.find_element(By.ID, 'field_dp46a_last')
email = driver.find_element(By.ID, 'field_j3yjg')
phone = driver.find_element(By.ID, 'field_qbnam')
text_field = driver.find_element(By.ID, 'field_uot6f_label')

# send values to form fields

first_name.send_keys("Testonww")
last_name.send_keys("Testerqq")
email.send_keys("nchubko.forte1@gmail.com")
phone.send_keys("097234543002")
#text_field.send_keys("example text to sent into database")

# Click Submit button

submit_btn  = driver.find_element(By.CLASS_NAME, 'frm_button_submit')
submit_btn.click()

